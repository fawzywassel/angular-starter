{
  "extends": [
    "tslint-etc",
    "tslint-config-prettier",
    "tslint-plugin-prettier",
    "tslint:recommended"
  ],
  "rules": {
    "no-unused-declaration": true,
    "max-line-length": [
      true,
      120
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "semicolon": [
      true,
      "never"
    ],
    "prettier": true
  }
}
